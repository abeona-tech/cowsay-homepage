---
import aboutImg from "@/assets/works-on-my-machine.png";
import deadcodeImg from "@/assets/dead-code.png";
import SocialList from "@/components/SocialList.astro";
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";

const meta = {
	description: "A twitter bot that tweets random cowsay messages.",
	title: "About",
};

const webpageTech: { desc: string; href: string; title: string }[] = [
	{
		desc: "Astro is a front-end framework for building faster websites with less client-side JavaScript.",
		href: "https://astro.build",
		title: "Astro",
	},
	{
		desc: "Cactus Theme is a customizable Astro theme developed by Chrismwilliams, providing a unique aesthetic for Astro-based projects.",
		href: "https://github.com/chrismwilliams/astro-theme-cactus/blob/main/package.json",
		title: "Cactus Theme",
	},
	{
		desc: "Tailwind CSS is a utility-first CSS framework for rapidly building custom user interfaces directly in your HTML.",
		href: "https://tailwindcss.com",
		title: "Tailwind CSS",
	},
	{
		desc: "MDX is an authorable format that lets you seamlessly write JSX in your Markdown documents.",
		href: "https://mdxjs.com/",
		title: "MDX",
	},
	{
		desc: "Satori is a tool developed by Vercel for generating Open Graph images in PNG format for blog posts.",
		href: "https://github.com/vercel/satori",
		title: "Satori",
	},
	{
		desc: "Pagefind is a fully static search library, providing search functionality without needing a server or database.",
		href: "https://pagefind.app/",
		title: "Pagefind",
	},
	{
		desc: "Paletton is a tool for creating color palettes with up to four colors, providing a range of options for color selection and customization.",
		href: "https://paletton.com/",
		title: "Paletton",
	},
	{
		desc: "Midjourney is an AI tool that generates images from text, combining GPT-3 and DALL-E to create unique visuals.",
		href: "https://www.midjourney.com/",
		title: "Midjourney",
	},
	{
		desc: "Netlify lets you build, host, and maintain web projects with continuous deployment and serverless functions.",
		href: "https://www.netlify.com/",
		title: "Netlify",
	},
];

const botTech: { desc: string; href: string; title: string }[] = [
	{
		desc: "cowsay is a program that generates ASCII pictures of a cow with a message in a speech bubble in your terminal.",
		href: "https://www.npmjs.com/package/cowsay",
		title: "cowsay",
	},
	{
		desc: "word-wrap is a simple module for wrapping input text into a column of specified width, useful for formatting console output.",
		href: "https://www.npmjs.com/package/word-wrap",
		title: "word-wrap",
	},
	{
		desc: "ansi-to-html ansi-to-html is a library that converts ANSI escape codes for styling console output into HTML elements.",
		href: "https://www.npmjs.com/package/ansi-to-html",
		title: "ansi-to-html",
	},
	{
		desc: "node-html-to-image is a Node.js module that generates images from HTML code using Puppeteer under the hood.",
		href: "https://www.npmjs.com/package/node-html-to-image",
		title: "node-html-to-image",
	},
	{
		desc: "lolcatjs is a library that applies rainbow colors to text in the terminal, inspired by the Ruby lolcat gem.",
		href: "https://www.npmjs.com/package/lolcatjs",
		title: "lolcatjs",
	},
	{
		desc: "twitter-api-v2 is a comprehensive Twitter v2 API client for Node.js, supporting REST and streaming APIs.",
		href: "https://www.npmjs.com/package/twitter-api-v2",
		title: "twitter-api-v2",
	},
	{
		desc: "GitHub Actions is a CI/CD system fully integrated with GitHub, allowing for the automation of software workflows directly within a repository.",
		href: "https://github.com/features/actions",
		title: "GitHub Actions",
	},
];
---

<PageLayout meta={meta}>
	<section>
		<h1 class="title mb-6">About</h1>
		<p>
			Hi, I'm a <a class="cactus-link" href="https://twitter.com/cowsayco">Twitter Bot</a> that posts
			random developer jokes.
		</p>

		<Image
			class="mt-4"
			alt="Cow saying it works on my machine pixel art"
			fetchpriority="high"
			loading="eager"
			src={aboutImg}
		/>
	</section>

	<section>
		<h2 class="title mb-6 mt-16 text-2xl">Technologies</h2>

		<p class="mt-4">
			I was created using node.js, cowsay, lolcatjs, ansi-to-html, node-html-to-image, and the
			twitter-api-v2. I'm hosted on Netlify, and my source code is available on GitHub.
		</p>
		<p class="my-4">
			To learn more or to contribute to this side-kick project,
			<a class="cactus-link" href="https://github.com/meowso/cowsay">visit our repository</a>.
		</p>
		<h3 class="title mb-4 mt-8 text-lg">Twitter bot</h3>
		<dl class="space-y-4">
			{
				botTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2">
						<dt>
							<span>
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
		<h3 class="title mb-4 mt-8 text-lg">Webpage</h3>
		<dl class="space-y-4">
			{
				webpageTech.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
	<section>
		<Image
			class="mb-8 mt-20"
			alt="I see Dead code illustration by chatGPT4"
			fetchpriority="low"
			loading="lazy"
			src={deadcodeImg}
		/>
		<SocialList />
	</section>
</PageLayout>
